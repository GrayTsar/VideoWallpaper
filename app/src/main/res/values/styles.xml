<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/StyleOverwrite.Toolbar</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#e53935</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#212121</item>
        <item name="colorAccent">#e53935</item>
    </style>

    <!-- Material AlertDialog Theme -->
    <style name="ThemeOverwrite.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/background</item>
        <item name="colorSecondary">@color/background</item>
        <item name="colorOnSurface">@color/background</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="materialAlertDialogTitleTextStyle">@style/StyleOverwrite.Dialog.Title</item>
        <item name="buttonBarPositiveButtonStyle">@style/StyleOverwrite.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/StyleOverwrite.Dialog.Button</item>
    </style>

    <style name="StyleOverwrite.Dialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="StyleOverwrite.Dialog.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- ToolBar -->
    <style name="ThemeOverwrite.Toolbar" parent="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">@color/text_toolbar</item>
        <item name="colorControlNormal">@color/text_toolbar</item>
    </style>

    <style name="StyleOverwrite.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextOverwrite.Toolbar.Title</item>
        <item name="colorControlNormal">@color/text_toolbar</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="navigationIconTint">@color/text_toolbar</item>
    </style>

    <style name="TextOverwrite.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_toolbar</item>
    </style>

    <style name="ArrowHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffffff</item>
    </style>

    <style name="StyleOverwrite.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:itemBackground">@color/background</item>
    </style>
</resources>
