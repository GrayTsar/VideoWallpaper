<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#e53935</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#212121</item>
        <item name="colorAccent">#e53935</item>
    </style>

    <style name="ArrowHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffffff</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/ArrowHamburgerStyle</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">#00ff00</item>
        <item name="colorPrimaryVariant">#00ff00</item>
        <item name="colorOnPrimary">#00ff00</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:textColor">@color/menuTextColorPrimary</item>
        <item name="android:itemBackground">@color/menuBackground</item>
        <item name="actionOverflowMenuStyle">@style/popupMenuOverflowStyle</item>
    </style>

    <style name="popupMenuOverflowStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="elevation">0dp</item>
    </style>
</resources>
